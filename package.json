{
  "name": "karanteeni-discord",
  "version": "1.1.0",
  "description": "discord bot for managing karanteeni minecraft server",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pennane/karanteeni-discord.git"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./dist/index.js",
    "dev:build": "cross-env NODE_ENV=development node ./dist/index.js",
    "dev": "NODE_OPTIONS='--trace-warnings' cross-env NODE_ENV=development nodemon src/index.ts",
    "build": "tsc"
  },
  "author": "Arttu Pennanen <arttuinthewoods@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "chalk": "^4.1.0",
    "discord.js": "^12.5.1",
    "dotenv": "^8.2.0",
    "node-schedule": "^1.3.2",
    "twitch": "^4.4.5",
    "twitch-auth": "^4.4.5",
    "twitch-webhooks": "^4.4.5"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/event-emitter": "^0.3.3",
    "@types/node-schedule": "^1.3.1",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.7",
    "ts-node-dev": "^1.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "ignore": [
      "src/**/*.spec.ts",
      "*.json"
    ],
    "exec": "ts-node ./src/index.ts"
  }
}